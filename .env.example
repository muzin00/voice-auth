# VoiceAuth Server Configuration

# ===================
# API Settings
# ===================
VOICEAUTH_API_HOST=0.0.0.0
VOICEAUTH_API_PORT=8000
VOICEAUTH_API_LOG_LEVEL=info
VOICEAUTH_API_DEBUG=false
VOICEAUTH_API_WEBSOCKET_TIMEOUT=60

# ===================
# Database Settings
# ===================
# Database Type: "sqlite" or "postgres"
VOICEAUTH_DB_DB_TYPE=sqlite

# SQLite (when DB_TYPE=sqlite)
VOICEAUTH_DB_SQLITE_PATH=./data/voiceauth.db

# PostgreSQL (when DB_TYPE=postgres)
VOICEAUTH_DB_POSTGRES_SERVER=localhost
VOICEAUTH_DB_POSTGRES_PORT=5432
VOICEAUTH_DB_POSTGRES_DB=voiceauth
VOICEAUTH_DB_POSTGRES_USER=voiceauth
VOICEAUTH_DB_POSTGRES_PASSWORD=password

# ===================
# Engine Settings
# ===================
VOICEAUTH_ENGINE_MODELS_DIR=models
VOICEAUTH_ENGINE_TARGET_SAMPLE_RATE=16000
VOICEAUTH_ENGINE_SPEAKER_SIMILARITY_THRESHOLD=0.75

# ===================
# Service Settings
# ===================
VOICEAUTH_SERVICE_ENROLLMENT_MAX_RETRIES=5
VOICEAUTH_SERVICE_VERIFICATION_PROMPT_LENGTH=4
VOICEAUTH_SERVICE_SIMILARITY_THRESHOLD=0.75
