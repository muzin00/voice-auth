# VoiceAuth Server Configuration

# ===================
# API Settings
# ===================
API_HOST=0.0.0.0
API_PORT=8000
API_LOG_LEVEL=info
API_DEBUG=false
API_WEBSOCKET_TIMEOUT=60

# ===================
# Database Settings
# ===================
# Database Type: "sqlite" or "postgres"
DB_DB_TYPE=sqlite

# SQLite (when DB_TYPE=sqlite)
DB_SQLITE_PATH=./data/voiceauth.db

# PostgreSQL (when DB_TYPE=postgres)
DB_POSTGRES_SERVER=localhost
DB_POSTGRES_PORT=5432
DB_POSTGRES_DB=voiceauth
DB_POSTGRES_USER=voiceauth
DB_POSTGRES_PASSWORD=password

# ===================
# Engine Settings
# ===================
ENGINE_MODELS_DIR=models
ENGINE_TARGET_SAMPLE_RATE=16000
ENGINE_SPEAKER_SIMILARITY_THRESHOLD=0.75

# ===================
# Service Settings
# ===================
SERVICE_ENROLLMENT_MAX_RETRIES=5
SERVICE_VERIFICATION_PROMPT_LENGTH=4
SERVICE_SIMILARITY_THRESHOLD=0.75
